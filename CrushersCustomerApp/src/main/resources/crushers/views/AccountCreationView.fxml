<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="357.0" prefWidth="340.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="crushers.controllers.AccountCreationController">
   <children>
      <ChoiceBox fx:id="bankSelection" layoutX="28.0" layoutY="90.0" prefHeight="26.0" prefWidth="181.0" />
      <Label layoutX="28.0" layoutY="65.0" text="Select Bank:">
         <font>
            <Font name="SansSerif Regular" size="13.0" />
         </font></Label>
      <Label layoutX="28.0" layoutY="145.0" text="Select Account type:">
         <font>
            <Font name="SansSerif Regular" size="13.0" />
         </font></Label>
      <Label layoutX="30.0" layoutY="240.0" text="Account Name:">
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font></Label>
      <RadioButton fx:id="savingsOption" layoutX="44.0" layoutY="197.0" mnemonicParsing="false" onAction="#setGoalVisible" text="Savings Account">
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font>
         <toggleGroup>
            <ToggleGroup fx:id="accountType" />
         </toggleGroup>
      </RadioButton>
      <Button fx:id="createAccountButton" layoutX="120.0" layoutY="328.0" mnemonicParsing="false" onAction="#createAccount" text="Create Account">
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font>
      </Button>
      <Label layoutX="87.0" layoutY="23.0" text="New account creation">
         <font>
            <Font name="SansSerif Regular" size="18.0" />
         </font>
      </Label>
      <RadioButton fx:id="paymentOption" layoutX="44.0" layoutY="173.0" mnemonicParsing="false" onAction="#setGoalInvisible" text="Payment Account" toggleGroup="$accountType">
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font>
      </RadioButton>
      <TextField fx:id="accountDescriptionField" layoutX="28.0" layoutY="265.0" prefHeight="26.0" prefWidth="182.0" />
      <Label fx:id="invalidLabel" layoutX="28.0" layoutY="371.0" textFill="#e11616">
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
