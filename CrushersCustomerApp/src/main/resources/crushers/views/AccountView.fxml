            <Font name="SansSerif Regular" size="12.0" />
         </font></Button>
      <ListView fx:id="accountList" layoutX="33.0" layoutY="119.0" prefHeight="200.0" prefWidth="266.0" style="-fx-border-color: gray; -fx-background-color: white;" />
      <Label layoutX="84.0" layoutY="86.0" text="Please, select an account">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </Label>
      <Button fx:id="createNewAccountButton" layoutX="177.0" layoutY="328.0" mnemonicParsing="false" onAction="#createNewAccount" text="Create new account">
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font>
      </Button>
      <Label layoutX="393.0" layoutY="86.0" text="Selected account:">
         <font>
            <Font name="SansSerif Regular" size="15.0" />
         </font>
      </Label>
