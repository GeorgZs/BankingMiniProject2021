               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Label fx:id="accountTypeLabel" prefHeight="27.0" prefWidth="230.0" text="Account type: {payment}" textFill="#311e7e">
               <font>
                  <Font name="SansSerif Regular" size="13.0" />
               </font>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Label fx:id="accountNameLabel" prefHeight="27.0" prefWidth="231.0" text="Account name: {name}" textFill="#311e7e">
               <font>
                  <Font name="SansSerif Regular" size="13.0" />
               </font>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Label fx:id="accountBalanceLabel" prefHeight="27.0" prefWidth="234.0" text="Account balance: {balance} SEK" textFill="#311e7e">
