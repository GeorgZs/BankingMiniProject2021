               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
            <Label fx:id="accountIDLabel" prefHeight="27.0" prefWidth="189.0" text="Account ID: {ID}" textFill="#311e7e">
               <font>
                  <Font name="SansSerif Regular" size="13.0" />
               </font>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </Label>
         </children>
      </VBox>
      <Button fx:id="selectButton" layoutX="33.0" layoutY="326.0" mnemonicParsing="false" onAction="#select" prefHeight="26.0" prefWidth="58.0" text="Select">
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font>
      </Button>
      <Label fx:id="invalidLabel" alignment="CENTER" layoutX="342.0" layoutY="339.0" prefHeight="18.0" prefWidth="155.0" textFill="#e11616">
         <font>
            <Font name="Malgun Gothic Semilight" size="12.0" />
         </font>
      </Label>
      <Button fx:id="transferButton" layoutX="333.0" layoutY="326.0" mnemonicParsing="false" onAction="#transferFunds" prefHeight="27.0" prefWidth="94.0" text="Transfer funds">
         <font>
            <Font name="SansSerif Regular" size="12.0" />
         </font>
      </Button>
      <Label fx:id="totalBalanceLabel" alignment="CENTER" layoutY="52.0" prefHeight="23.0" prefWidth="600.0" text="Total Balance: {totalBalance} " textAlignment="CENTER">
         <font>
            <Font name="SansSerif Regular" size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
